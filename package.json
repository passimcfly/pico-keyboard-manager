{
  "name": "pico-keyboard-manager",
  "private": true,
  "version": "1.0.0",
  "author": "passimcfly",
  "main": "dist/electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "copyImages": "bash scripts/copyImages.sh",
    "app:dev": "tsc && npm run copyImages && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build": "npm run vite:build && tsc && npm run copyImages && electron-builder",
    "app:preview": "npm run vite:build && tsc && npm run copyImages && electron ."
  },
  "build": {
    "appId": "7cc325c5-aa3a-4ac2-aa29-d0d6d84c2d8b-passimcfly",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "serialport": "^11.0.1",
    "usb": "^2.9.0",
    "uuid": "^9.0.0",
    "vue": "^3.3.4",
    "vuetify": "^3.3.11"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-vue": "^2.3.4",
    "concurrently": "^7.6.0",
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3",
    "pinia": "^2.1.6",
    "typescript": "^4.9.5",
    "vite": "^2.9.16",
    "vue-router": "^4.2.4",
    "vue-tsc": "^0.40.13"
  }
}
